{
  "name": "@dpo-packrat/server",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "Node server for Packrat",
  "homepage": "https://github.com/Smithsonian/dpo-packrat#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Smithsonian/dpo-packrat.git"
  },
  "bugs": {
    "url": "https://github.com/Smithsonian/dpo-packrat/issues"
  },
  "contributors": [
    {
      "name": "Jon Tyson",
      "url": "https://github.com/jahjedtieson"
    },
    {
      "name": "Karan Pratap Singh",
      "url": "https://github.com/karanpratapsingh"
    }
  ],
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "start": "yarn build && concurrently 'yarn build:watch' 'yarn server:start'",
    "start:prod": "node build/index.js",
    "server:start": "nodemon build/index.js",
    "build": "tsc --build && copyfiles db/**/*.* graphql/**/**.graphql build/",
    "build:watch": "tsc --watch",
    "clean": "rm -rf node_modules/ build/",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:prisma": "npx prisma generate --schema=./db/prisma/schema.prisma",
    "postinstall": "cd .. && yarn generate:server:prisma && cd server",
    "test": "jest --passWithNoTests",
    "initdb": "docker exec -i packrat-db sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < /app/scripts/Packrat.sql\""
  },
  "dependencies": {
    "@dpo-packrat/common": "1.0.0",
    "@prisma/client": "^2.0.0",
    "@types/express": "^4.17.6",
    "apollo-server-express": "^2.14.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-tools": "^6.0.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.1",
    "@graphql-codegen/schema-ast": "^1.15.1",
    "@graphql-codegen/typescript": "1.15.1",
    "@prisma/cli": "^2.0.0",
    "@types/jest": "^24.9.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0"
  }
}
