{
  "name": "@dpo-packrat/server",
  "version": "0.4.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "Node server for Packrat",
  "homepage": "https://github.com/Smithsonian/dpo-packrat#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Smithsonian/dpo-packrat.git"
  },
  "bugs": {
    "url": "https://github.com/Smithsonian/dpo-packrat/issues"
  },
  "contributors": [
    {
      "name": "Jon Tyson",
      "url": "https://github.com/jahjedtieson"
    },
    {
      "name": "Karan Pratap Singh",
      "url": "https://github.com/karanpratapsingh"
    }
  ],
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "start": "yarn build:dev && concurrently 'yarn build:watch' 'yarn server:start'",
    "start:prod": "node build/index.js",
    "server:start": "nodemon build/index.js --ignore var/",
    "build:dev": "tsc --build && copyfiles db/**/*.* graphql/**/**.graphql build/",
    "build:prod": "tsc --build && copyfiles db/**/*.* graphql/**/**.graphql build/",
    "build:watch": "tsc --watch",
    "clean": "rm -rf node_modules/ build/",
    "generate": "graphql-codegen --config ./graphql/codegen.yml",
    "generate:prisma": "npx prisma generate --schema=./db/prisma/schema.prisma",
    "postinstall": "cd .. && yarn generate:server:prisma && cd server",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit --config tests/jest.config.js",
    "initdbdock": "docker exec -i packrat-db sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < /app/scripts/Packrat.SCHEMA.sql\" & docker exec -i packrat-db sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < /app/scripts/Packrat.PROC.sql\" & docker exec -i packrat-db sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < /app/scripts/Packrat.DATA.sql\"",
    "dropdbdock": "docker exec -i packrat-db sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD -e 'DROP DATABASE IF EXISTS `Packrat`'\"",
    "initdb": "sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < ./db/sql/scripts/Packrat.SCHEMA.sql\" & sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < ./db/sql/scripts/Packrat.PROC.sql\" & sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD < ./db/sql/scripts/Packrat.DATA.sql\"",
    "dropdb": "sh -c \"exec mysql -u root -p$MYSQL_ROOT_PASSWORD -e 'DROP DATABASE IF EXISTS `Packrat`'\""
  },
  "dependencies": {
    "@dpo-packrat/common": "0.4.0",
    "@prisma/client": "2.4.1",
    "@types/express": "4.17.8",
    "@types/lodash": "4.14.161",
    "@types/passport": "1.0.4",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.10",
    "apollo-server-express": "2.17.0",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "csv-parser": "2.3.3",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "graphql": "15.3.0",
    "graphql-tools": "6.2.2",
    "jszip": "3.5.0",
    "lodash": "4.17.20",
    "memorystore": "1.6.2",
    "node-fetch": "2.6.1",
    "node-stream-zip": "1.11.3",
    "passport": "0.4.1",
    "passport-local": "1.0.0",
    "supertest": "4.0.2",
    "uuid": "8.3.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/schema-ast": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.6",
    "@prisma/cli": "2.4.1",
    "@types/jest": "26.0.13",
    "@types/node-fetch": "2.5.7",
    "jest": "24.9.0",
    "ts-jest": "24.3.0"
  }
}
